#container {
  position: relative;
  width: 100vw;
  overflow: hidden  ;
  overflow: auto;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: start;
}

#imagediv {
  position: relative;
  width: 300rpx;
  height: 300rpx;
  max-width: 300px;
  max-height: 300px;
  cursor: pointer;
  background-color: #EDEDED;
  opacity: 0.9;
  margin: 0 auto;
  margin-top: 206rpx;

}
.top-bg{
  width: 100%;
  height: 660rpx;
  position: relative;
  overflow: hidden;
}
.bg-img{
  position: absolute;
  top: 0;
  
  width:750rpx;
  height: 660rpx;
  object-fit: contain;
  z-index: -1;
  /* filter: blur(5rpx); */
}
.avatarimg {
  width: 100%;
  height: 100%;
  position: absolute;
  left: 0;
  top: 0;
}
.author-wishes{
  width: 300rpx;
  margin: 0 auto;
  margin-top: 10rpx;
  font-family: YRDZST-Regular;
  font-size: 28rpx;
  font-weight: normal;
  letter-spacing: 0em;
  color: #3D3D3D;
}
.author{
  display: inline;
}
.wish{
  text-indent: 2em;
}
.option-img{
  width: 200rpx;
  height: 32rpx;
  display: block;
  margin: 0 auto;
  margin-top:24rpx;

}
.border-bottom{
  width: 100%;
  height: 80rpx;
  text-align: center;
  font-size: 28rpx;
  line-height: 80rpx;
  color: #999696;
}
.cropper-button {
  z-index: 10;
  position: fixed;
  width: 100%;
  bottom: 2em;
  display: flex;
  justify-content: space-evenly;
}

.cropper-button button {
  width: 35%;
  /* max-width: 15em; */
  text-align: center;
  /* line-height: 92rpx; */
}
.comfrim{
  color: #fefef7 !important;
  background-color: #05c160 !important;
}
.cancel{
  color: #1f9763 !important;
  background-color: #f2f2f2 !important;
}
.borders-outer {
  /* padding-top: 24rpx; */
  width: 100%;
  height: calc(57vh - 200rpx);

  display: flex;
  align-items: center;
  justify-content: center;
  background-color: #FFFFFF88;
  box-sizing: border-box;
}

#borders {
  width: 100%;
  display: flex;
  flex-wrap: wrap;
  justify-content: space-evenly;
}

#borders.windows, #borders.mac {
  grid-auto-flow: row;
  justify-content: center;
}

.border {
  width: 200rpx;
  height: 200rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  margin-top: 24rpx;

}

.border image {
  width: 100%;
  height: 100%;
  cursor: pointer;
}
.option-view{
  width: 100%;
  text-align: center;
  position: absolute;
  bottom: -110rpx;
}

.border image.active {
  width: 100%;
  height: 100%;
  box-shadow:0 0 5px #24ac46;
}

#export-and-share {
  position: fixed;
  bottom: 0rpx;
  width: 100%;
  background-color: #fff;
  padding: 24rpx 0;
  display: flex;
  flex-direction: row;
  justify-content: space-evenly;
}

.export-and-share button{
  position: absolute;
  width: 300rpx;
  bottom: 24rpx;
  border: 0;

}
.export, .share{
  width: 300rpx;
}
