
.back-contain{
  position: fixed;
  left: 28rpx;
  display: flex;
  align-items: center;
  z-index: 10;
  width: 100vw;
  overflow: hidden;
}








.click-tip{
  width: 100%;
  height: 100%;
  background-color: rgba(0,0,0,0);
  text-align: center;
  line-height: 300rpx;
  color: #333;
  position: absolute;
  top: 80rpx;
  opacity: 60%;
}
.add-img{
 position: absolute;
 top: 90rpx;
 width: 96rpx;
 height: 96rpx;
 left: 102rpx;
